<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ocean"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:longClickable="true"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/upgrade_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@id/upgrade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center" >

            <Button
                android:id="@+id/nxtLvl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:onClick="nextLevel"
                android:text="Continue" />

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="22dp"
                android:layout_marginRight="143dp"
                android:layout_toLeftOf="@+id/nxtLvl" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/upgrade_crew" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="200dp"
                android:layout_height="480dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/frameLayout1" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="69dp"
                    android:src="@drawable/upgrade_weps" />
            </FrameLayout>

            <TextView
                android:id="@+id/LevelView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/frameLayout1"
                android:layout_marginRight="55dp"
                android:layout_marginTop="44dp"
                android:text="Level: "
                android:textColor="#6F4242"
                android:textSize="30sp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/BootyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/LevelView"
                android:layout_below="@+id/LevelView"
                android:text="Booty: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#6F4242"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/upgrade_title" />

            <FrameLayout
                android:id="@+id/frameLayout3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignRight="@+id/frameLayout1"
                android:layout_below="@+id/BootyView"
                android:layout_marginRight="24dp"
                android:layout_marginTop="21dp" >

                <ImageView
                    android:id="@+id/hireView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:onClick="hire"
                    android:src="@drawable/upgrade_hire_crew" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_above="@+id/nxtLvl"
                android:layout_alignLeft="@+id/frameLayout3" >

                <ImageView
                    android:id="@+id/fireView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:onClick="heave"
                    android:src="@drawable/upgrade_fire_crew" />

            </FrameLayout>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/frameLayout3"
                android:layout_centerHorizontal="true"
                android:onClick="addTurret2"
                android:src="@drawable/upgrade_cannon" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/imageView4"
                android:layout_below="@+id/LevelView"
                android:onClick="addTurret1"
                android:src="@drawable/upgrade_swivel" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/imageView4"
                android:layout_below="@+id/imageView4"
                android:onClick="addTurret3"
                android:src="@drawable/upgrade_torpedo_launcher" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/imageView6"
                android:layout_below="@+id/imageView6"
                android:onClick="addTurret4"
                android:src="@drawable/upgrade_mine_launcher" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/imageView7"
                android:layout_below="@+id/imageView7"
                android:onClick="addTurret5"
                android:src="@drawable/upgrade_missile_launcher" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/imageView8"
                android:layout_below="@+id/imageView8"
                android:onClick="addTurret6"
                android:src="@drawable/upgrade_lasor_cannon" />

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>