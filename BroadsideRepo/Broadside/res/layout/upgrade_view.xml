<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/broadside_logo"
    android:orientation="vertical" android:clickable="true" android:focusable="true" android:longClickable="true"
    android:focusableInTouchMode="true">

    <FrameLayout
        android:id="@+id/upgrade_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0.39" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center" >

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button1"
                android:layout_below="@+id/button1"
                android:onClick="addTurret3"
                android:text="3" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button3"
                android:layout_below="@+id/button3"
                android:onClick="addTurret5"
                android:text="5" />

            <TextView
                android:id="@+id/BootyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button1"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:text="Booty: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FF0000" />

            <Button
                android:id="@+id/nxtLvl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:onClick="nextLevel"
                android:text="Continue" />

            <TextView
                android:id="@+id/LevelView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/nxtLvl"
                android:layout_alignRight="@+id/BootyView"
                android:text="Level: "
                android:textColor="#FF0000"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button3"
                android:layout_alignParentRight="true"
                android:onClick="addTurret2"
                android:text="2" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button5"
                android:layout_alignParentRight="true"
                android:onClick="addTurret4"
                android:text="4" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button4"
                android:onClick="addTurret6"
                android:text="6" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/mainship" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BootyView"
                android:layout_toLeftOf="@+id/nxtLvl"
                android:onClick="addTurret1"
                android:text="1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/BootyView"
                android:layout_alignParentTop="true"
                android:text="Add Turret:"
                android:textColor="#FF0000" />

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>