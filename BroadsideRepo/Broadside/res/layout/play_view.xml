<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_x="-1dp" android:layout_y="5dp"
            android:background="@drawable/background" android:id="@id/play_frame">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Unit"
                android:id="@+id/addObject" android:layout_gravity="center_horizontal|top" android:onClick="addShip"/>
    </FrameLayout>
</AbsoluteLayout>
