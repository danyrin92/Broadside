<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false">

    <FrameLayout
        android:id="@id/play_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/ocean"
        android:scrollbarAlwaysDrawVerticalTrack="false" android:clickable="false">

        <Button
            android:id="@+id/addObject2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_x="209dp"
            android:layout_y="111dp"
            android:onClick="addTurret"
            android:text="Add Turret"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/HealthView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:text="Health: "
            android:textColor="#FF0000"
            android:typeface="monospace" />

        <Button
            android:id="@+id/SpawnEnemy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:onClick="spawnEnemies"
            android:text="Spawn Enemy" />

        <Button
            android:id="@+id/UpgradeScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:onClick="gotoUpgrades"
            android:text="Upgrade Screen" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/LevelView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical|center_horizontal|right"
                android:text="Level: "
                android:textColor="#FF0000"
                android:typeface="monospace" />

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>